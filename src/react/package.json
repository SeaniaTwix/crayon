{
  "name": "crayon-react",
  "version": "1.1.6",
  "description": "",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/alshdavid/crayon"
  },
  "scripts": {
    "build": "webpack",
    "build:prod": "webpack --prod",
    "build:watch": "webpack --watch",
    "clean": "rm -rf dist && rm -rf coverage",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch --passWithNoTests",
    "test:cover": "jest --coverage --passWithNoTests"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^24.0.13",
    "@types/react": "^16.8.17",
    "@types/react-dom": "^16.8.4",
    "jest": "^24.8.0",
    "ts-jest": "^24.0.2",
    "ts-loader": "^6.0.4",
    "typescript": "^3.5.3",
    "webpack": "^4.39.2",
    "webpack-bundle-analyzer": "^3.4.1",
    "webpack-cli": "^3.3.7",
    "crayon": "*",
    "react": "*",
    "react-dom": "*"
  },
  "peerDependencies": {
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "crayon": "^2.0.5"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/**.{ts,js}",
      "!**/node_modules/**",
      "!**/vendor/**",
      "!**/index.{ts,js}"
    ],
    "coverageDirectory": "reports/coverage",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "moduleNameMapper": {
      "^~/(.*)$": "<rootDir>/src/$1"
    },
    "globals": {
      "window": {}
    },
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": ".*\\.spec\\.(jsx?|tsx?)$",
    "reporters": [
      "default"
    ]
  }
}
